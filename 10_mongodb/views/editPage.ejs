<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Page</title>
</head>
<body>
     <form method="post" action="/insertData?id=<%=singleData.id%>" enctype="multipart/form-data">

      <table border="1" cellspacing="0">
        <tr>
            <td><label>Name</label></td>
            <td><input type="text" name="name" value="<%= singleData.name %>"></td>
        </tr>
        <tr>
            <td><label>Email</label></td>
            <td><input type="email" name="email" value="<%= singleData.email %>"></td>
        </tr>
        <tr>
            <td><label>Phone</label></td>
            <td><input type="number" name="phone" value="<%= singleData.phone %>"></td>
        </tr>
        <tr>
            <td><label>Gender</label></td>
            <td>
                <input type="radio" <% if(singleData.gender == "male"){%> checked <% } %> value="male" name="gender">Male
                <input type="radio" <% if(singleData.gender == "female"){%> checked <% } %>  value="female" name="gender">Female
            </td>
        </tr>
        <tr>
            <td><label>Hobby</label></td>
            <td>
                <input type="checkbox" <% if(singleData.hobby.includes("running")){%> checked <% } %>  value="running" name="hobby">Running
                <input type="checkbox"  <% if(singleData.hobby.includes("coading")){%> checked <% } %>  value="coading" name="hobby">Coading          
                <input type="checkbox"  <% if(singleData.hobby.includes("gamming")){%> checked <% } %>  value="gamming" name="hobby">Gamming 
            </td>
        </tr>
         <tr>
            <td><label>Password</label></td>
            <td><input type="password" value="<%= singleData.password %>" name="password"></td>
        </tr>
         <tr>
            <td><label>City</label></td>
            <td>
               <select name="city">
                <option value="">--select option--</option>
              <%  let cities = ["Lucknow","Delhi","Kota","Ahemdabad","Amreli"]; %>

                   <% cities.map((city)=>{ %>
                        <option <% if(singleData.city == city){ %> selected  <%}%> value="<%= city %>"><%= city %></option>
                   <% }) %>

               </select>
            </td>
        </tr>
        <tr>
            <td><label>Image</label></td>
            <td>
                <input type="file" name="image"/>
                <img src="<%= singleData.image%>" width="80" height="80"/>
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit"></td>
        </tr>
      </table>
    </form>

</body>
</html>