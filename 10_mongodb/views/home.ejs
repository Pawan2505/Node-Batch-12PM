<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
  </head>
  <body>
    <h1>Home Page</h1>

    <form method="post" action="/insertData">
      <table border="1" cellspacing="0">
        <tr>
            <td><label>Name</label></td>
            <td><input type="text" name="name"></td>
        </tr>
        <tr>
            <td><label>Email</label></td>
            <td><input type="email" name="email"></td>
        </tr>
        <tr>
            <td><label>Phone</label></td>
            <td><input type="number" name="phone"></td>
        </tr>
        <tr>
            <td><label>Gender</label></td>
            <td>
                <input type="radio" value="male" name="gender">Male
                <input type="radio" value="female" name="gender">Female
            </td>
        </tr>
        <tr>
            <td><label>Hobby</label></td>
            <td>
                <input type="checkbox" value="running" name="hobby">Running
                <input type="checkbox" value="coading" name="hobby">Coading          
                <input type="checkbox" value="gamming" name="hobby">Gamming 
            </td>
        </tr>
         <tr>
            <td><label>Password</label></td>
            <td><input type="password" name="password"></td>
        </tr>
         <tr>
            <td><label>City</label></td>
            <td>
               <select name="city">
                <option value="">--select option--</option>
              <%  let cities = ["Lucknow","Delhi","Kota","Ahemdabad","Amreli"]; %>

                   <% cities.map((city)=>{ %>
                        <option value="<%= city %>"><%= city %></option>
                   <% }) %>

               </select>
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit"></td>
        </tr>
      </table>
    </form>
  </body>
</html>
